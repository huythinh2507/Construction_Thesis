@{
    ViewBag.Title = "My profile";
    ViewBag.ShowBreadcrumbs = true;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <script src="https://static.elfsight.com/platform/platform.js" data-use-service-core defer></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <style>
        .card {
            border: none;
            border-radius: 1rem;
            transition: all 0.2s;
            background-color: #f8f9fa; /* Light gray background */
        }

            .card:hover {
                transform: scale(1.02);
                box-shadow: 4px 10px 10px 15px rgba(0, 0, 0, 0.3);
            }

        .form-control {
            border: none;
            border-radius: 1rem;
            box-shadow: 12px 12px 22px 0px rgba(0, 0, 0, 0.1);
        }

            .form-control:focus {
                box-shadow: none;
                outline: none;
            }

        #sendLetter {
            margin-bottom: 20px;
            background: #6c757d;
            color: #fff;
            border-radius: 1rem;
            padding: 1rem;
            border: none;
            transition: all 0.2s;
        }

            #sendLetter:hover {
                transform: scale(1.02);
                background: #5a6268;
            }

        .card {
            box-shadow: 4px 4px 8px 8px rgba(0,0,0,0.4);
        }

        .margin {
            margin-top: 20px;
        }

        .booking-card {
            background-color: #f8f9fa;
            border-radius: 15px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
            transition: all 0.2s ease-in-out;
            margin: 20px;
        }

            .booking-card:hover {
                transform: scale(1.02);
            }

            .booking-card .member-info h4 {
                color: #007bff;
                margin-bottom: 10px;
            }

            .booking-card .member-info span {
                display: block;
                color: #6c757d;
                margin-bottom: 10px;
            }

            .booking-card .member-info p {
                color: #343a40;
                margin-bottom: 10px;
            }

            .booking-card .delete-form {
                position: absolute;
                top: 10px;
                right: 10px;
            }

            .booking-card .delete-button {
                background-color: #f8f9fa;
                border: none;
                color: #dc3545;
                padding: 5px 10px;
                font-size: 20px;
                line-height: 1;
                border-radius: 50%;
            }

        .status-container {
            display: flex;
            align-items: center;
        }

        .spinner {
            border: 8px solid #f3f3f3;
            border-top: 8px solid #3498db;
            border-radius: 90%;
            width: 10px;
            height: 10px;
            animation: spin 2s linear infinite;
            margin-left: 10px; /* optional: to add some space between the text and the spinner */
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>

<body>

    <!-- ======= Header ======= -->


    <main id="main">

        <section id="team" class="team">
            <div class="container aos-init" data-aos="fade-up">
                <div class="section-header">
                    <h2>My booking</h2>
                </div>
                @inject IHttpContextAccessor HttpContextAccessor
                @model IEnumerable<Thesis_web.Data.Booking>
                @if (Model != null)
                {

                    @foreach (var booking in Model)
                    {
                        @if (HttpContextAccessor.HttpContext.Session.GetString("email") == @booking.User_email)
                        {
                            <div class="col-lg-4 col-md-6 member aos-init booking-card">
                                <div class="member-info">

                                    <h4>Type: @booking.ServiceType</h4>
                                    <h4>Submitting Date: @booking.SubmittedDate</h4>
                                    <h4>Location: @booking.Location</h4>
                                    <span>Workers: @booking.Workers</span>
                                    <p>Start Time: @booking.StartTime</p>
                                    <p>Note: @booking.Note</p>
                                    <p>Working Time: @booking.WorkingTime</p>
                                    <p>Work Date: @booking.WorkDate</p>
                                    <p>Total Price: @booking.TotalPrice</p>
                                    <div id="status">
                                        @if (booking.Status == "Pending")
                                        {
                                            <div class="status-container">
                                                <p>Status: @booking.Status</p>
                                                <div class="spinner"></div>
                                            </div>
                                        }
                                        else
                                        {
                                            <p>Status: @booking.Status</p>
                                        }
                                    </div>

                                </div>
                            </div>
                        }

                    }
                }
                else
                {
                    <p>You don't have any booking.</p>
                }
                <script>
                </script>
            </div>
        </section>


        <!-- ======= Our Team Section ======= -->

    </main><!-- End #main -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <!-- Initialize AOS -->
    <script>
        AOS.init();
    </script>
</body>
</html>