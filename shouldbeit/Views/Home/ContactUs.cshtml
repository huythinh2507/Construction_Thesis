                    <style>
                        .php-email-form input, .php-email-form select, .php-email-form textarea {
                            font-family: Arial, sans-serif; /* Replace with your desired font */
                            font-size: 16px;
                        }
                    </style>
                    <form asp-action="SubmitContactForm" asp-controller="Contact" method="post" class="php-email-form">

                        <div class="col-md-12">
                            <input type="text" id="name" class="form-control" name="name" placeholder="Your full name" required>
                        </div>

                        <div class="col-md-12">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Your email address" required>
                        </div>
                        <div class="col-md-12">
                            <input type="text" class="form-control" id="message" name="message" placeholder="Your message" required>
                        </div>

                        <div class="col-md-12 text-center">
                            <button id="sendLetter" type="submit">Send</button>
                        </div>
                    </form>
                 








                </div><!-- End Contact Form -->

            </div>

        </div>
    </section>

    <script>
        function showProjectDetails() {
            var projectType = document.getElementById('projectType').value;
            if (projectType == 'remodel') {
                $('.remodelField').show();
                $('.repairField').hide();
                $('.buildField').hide();
            } else if (projectType == 'repair') {
                $('.remodelField').hide();
                $('.repairField').show();
                $('.buildField').hide();
            } else if (projectType == 'build') {
                $('.remodelField').hide();
                $('.repairField').hide();
                $('.buildField').show();
            } else {
                $('.remodelField').hide();
                $('.repairField').hide();
                $('.buildField').hide();
            }
        }
    </script>
</body>
</html>

