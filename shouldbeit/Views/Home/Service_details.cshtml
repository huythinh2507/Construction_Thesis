                                <button type="button" class="btn btn-primary" data-dismiss="modal" data-toggle="modal" data-target="#confirmModal" onclick="confirmDetails()">Next</button>
                            </div>
                        </form>
                    </div>
                   
                </div>
            </div>
        </div>

        <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmModalLabel">Booking Confirmation</h5>
                    </div>
                    <div class="modal-body" id="confirmDetailsBody">
                        <!-- Details will be filled in by the JavaScript function -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal" data-toggle="modal" data-target="#myModal">Back</button>
                        <button type="button" class="btn btn-primary" onclick="submitForm()">Confirm</button>
                    </div>
                </div>
            </div>

        </div>

        <script>
            document.getElementById('Location').addEventListener('input', function (e) {
                if (!e.target.value) {
                    e.target.style.border = '1px solid red';
                } else {
                    e.target.style.border = '';
                }
            });
            document.getElementById('Phone').addEventListener('input', function (e) {
                if (!e.target.value) {
                    e.target.style.border = '1px solid red';
                } else {
                    e.target.style.border = '';
                }
            });

            function submitForm() {
                document.getElementById('myForm').submit();
            }
            function updateWorkingTimeLabel(value) {
                document.getElementById('workingTimeLabel').textContent = value + (value > 1 ? ' hours' : ' hour');
            }
            function resetStartingTime() {
                var startTimeSelect = document.getElementById('StartTime');
                var selectedOption = startTimeSelect.options[startTimeSelect.selectedIndex];
                selectedOption.text = selectedOption.value;
            }
            function updateWorkingTimeRange() {
                var startTimeSelect = document.getElementById('StartTime');
                var selectedOption = startTimeSelect.options[startTimeSelect.selectedIndex];
                var startTime = selectedOption.value;
                var workingTime = document.getElementById('WorkingTime').value;

                var endTime = new Date(`1970-01-01T${startTime}:00Z`);
                endTime.setHours(endTime.getHours() + parseFloat(workingTime));
                endTime.setMinutes(endTime.getMinutes() + (workingTime % 1) * 60);

                var endTimeString = endTime.toISOString().substr(11, 5);

                selectedOption.text = `${startTime} - ${endTimeString}`;
            }
            var workerPrices = {
                "Builder": 120000,
                "Designer": 150000,
                "Operator": 100000,
                "Technician": 130000,
                "Product Manager": 200000
            };

            var serviceWorkers = {
                "Remodeling": { "Builder": 1, "Designer": 1, "Operator": 1 },
                "Construction": { "Builder": 2, "Operator": 1 },
                "Repairs": { "Builder": 1, "Operator": 1 },
                "Design": { "Designer": 1, "Product Manager": 1, "Operator": 1 }
            };
          
            function calculateTotal() {
                var serviceType = document.getElementById('ServiceType').value;
                var totalHour = document.getElementById('WorkingTime').value;
                var workers = serviceWorkers[serviceType];
                var totalPrice = 0;

                if (serviceType && totalHour && workers) {
                    totalHour = Number(totalHour);
                    if (isNaN(totalHour)) {
                        alert('Working time is not a valid number');
                        return;
                    }

                    for (var worker in workers) {
                        var workerCount = Number(workers[worker]);
                        var workerPrice = Number(workerPrices[worker]);

                        if (isNaN(workerCount) || isNaN(workerPrice)) {
                            alert(worker + ' count or price is not a valid number');
                            return;
                        }

                        totalPrice += workerCount * totalHour * workerPrice;
                    }

                    document.getElementById('TotalPrice').value = totalPrice + '₫/' + totalHour + 'h';
                } else {
                    alert('Please ensure service type and working time are entered correctly');
                }
            }



            function applyDiscount() {
                var totalPriceElement = document.getElementById('TotalPrice');
                var totalHour = document.getElementById('WorkingTime').value;
                var totalPriceString = totalPriceElement.value.split('₫')[0].replace(/[^0-9.]/g, '');
                var totalPrice = Number(totalPriceString);
                var discountedPrice = Math.round(totalPrice * 0.85); // Apply 15% discount
                totalPriceElement.value = discountedPrice + '₫/' + totalHour + 'h';
            }





            function confirmDetails() {
                let location = document.getElementById('Location').value;
                let workingTime = document.getElementById('WorkingTime').value;
                let hour = document.getElementById('StartTime').value;
                let note = document.getElementById('Note').value;
                let phone = document.getElementById('Phone').value;
                if (note === null || note === '') {
                    note = "no";
                }
                let date = document.getElementById('WorkDate').value;
                let promocode = document.getElementById('PromoCode').value;
                if (promocode === null || promocode === '') {
                    promocode = "no";
                }
                let serviceType = document.getElementById('ServiceType').value;
                let workers = serviceWorkers[serviceType];
                let totalPrice = document.getElementById('TotalPrice').value;

                let workersString = '';
                for (var worker in workers) {
                    workersString += workers[worker] + ' ' + worker + ', ';
                }
                // Remove the trailing comma and space
                workersString = workersString.slice(0, -2);

                let message = "Location: " + location + "<br>" +
                    "Working Time: " + workingTime + " hour(s)" + "<br>" +
                    "Starting Hour: " + hour + "<br>" +
                    "Date: " + date + "<br>" +
                    "Note: " + note + "<br>" +
                    "Phone: " + phone + "<br>" +
                    "Code: " + promocode + "<br>" +
                    "Workers: " + workersString + "<br>" +
                    "Total Price: " + totalPrice;

                // Fill in the details in the modal body
                document.getElementById('confirmDetailsBody').innerHTML = message;
                
                // Show the modal
                $('#confirmModal').modal('show');
            }


            function checkPromoCode() {
                var promoCode = document.getElementById('PromoCode').value;
                $.ajax({
                    url: '/PromoCode/IsPromoCodeAvailable',
                    type: 'GET',
                    data: { code: promoCode },
                    success: function (isAvailable) {
                        if (isAvailable) {
                            document.getElementById('promoCodeStatus').innerHTML = "Promo code is available!";
                            applyDiscount();
                        }
                        else {
                            document.getElementById('promoCodeStatus').innerHTML = "Promo code is not available.";
                            calculateTotal();
                        }
                    }
                });
            }

           

            // Update the 'RequiredWorkers' field when 'ServiceType' changes
            document.getElementById('ServiceType').addEventListener('change', function () {
                var serviceType = this.value;
                var workers = serviceWorkers[serviceType];
                var workersString = '';

                for (var worker in workers) {
                    workersString += workers[worker] + ' ' + worker + ', ';
                }

                // Remove the trailing comma and space
                workersString = workersString.slice(0, -2);

                document.getElementById('Workers').value = workersString;
            });

            // Trigger the change event
            document.getElementById('ServiceType').dispatchEvent(new Event('change'));


            $(document).ready(function () {
                $('.services-list a').click(function (e) {
                    e.preventDefault();
                    var target = $(this).attr('href');
                    $(target).fadeIn('slow');
                });
            });
            
            $(document).ready(function () {
                $('.services-list a').click(function () {
                    var tab_id = $(this).attr('href');

                    // hide all tab content
                    $('.tab-content').hide();

                    // show clicked tab content
                    $(tab_id).show();

                    return false;
                });
            });
            window.onload = function () {
                document.getElementById('remodelingTab').click();
            };

           

        </script>
